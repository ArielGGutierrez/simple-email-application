@model EmailMVCWebApplication.Models.EmailDto

<form asp-action="SendEmail" method="post">
    <div class="container border p-3">
        <h1 class="text-primary">New Email</h1>

        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="col-2">
                <label asp-for="Recipient" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Recipient" class="form-control" />
                <span asp-validation-for="Recipient" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Subject" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Body" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Body" class="form-control" />
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <br/>
            <div class="col-5">
                <input type="submit" value="Send Email" class="btn btn-success form-control" />
            </div>

        </div>

    </div>
</form>